<Window x:Class="GetReady.PartsOfExam.ReadingAnswerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetReady.PartsOfExam"
        mc:Ignorable="d"
        Title="ReadingAnswerBox" Height="300" Width="381.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FF2DB458" HorizontalAlignment="Center" Height="47" Stroke="#00000000" VerticalAlignment="Top" Width="374" IsHitTestVisible="False" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="My Answers" HorizontalAlignment="Center" Margin="42,10,41,0" VerticalAlignment="Top" Width="209" FontFamily="Aharoni" FontSize="24" Foreground="White" Height="30" HorizontalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <StackPanel x:Name="SP"></StackPanel>
        <Button x:Name="check" Content="Check" Grid.Column="1" HorizontalAlignment="Center" Height="34" Margin="48,67,8,0" VerticalAlignment="Top" Width="126" FontFamily="Levenim MT" Background="#FFB2F0C5"  BorderThickness="2" BorderBrush="#FF020000" Click="check_Click"/>
        <Button x:Name="show" Content="Show Right Answers" Grid.Column="1" HorizontalAlignment="Center" Height="34" Margin="48,112,8,0" VerticalAlignment="Top" Width="126" FontFamily="Levenim MT" Background="#FFB2F0C5"  BorderThickness="2" BorderBrush="#FF020000" Click="show_Click" Visibility="Hidden"/>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="Please write all the answers in capital letters" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="231" FontFamily="Levenim MT" FontSize="10.667"/>
    </Grid>
</Window>
